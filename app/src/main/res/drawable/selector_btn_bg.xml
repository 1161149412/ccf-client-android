<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="@color/color_blue_0b2841" />
            <stroke android:color="@color/color_blue_4d8cd6" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/color_blue_4d8cd6" />
            <stroke android:color="@color/color_blue_4d8cd6" android:width="1dp"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>