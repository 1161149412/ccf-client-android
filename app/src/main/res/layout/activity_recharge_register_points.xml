<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_background"
    android:orientation="vertical"
    tools:context="cn.cnlinfo.ccf.activity.RechargeRegisterPointsActivity">
    <include layout="@layout/item_title_no_right"/>
    <include layout="@layout/item_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="17dp"
        android:paddingLeft="38dp"
        android:paddingRight="48dp"
        android:paddingTop="17dp">

        <TextView
            style="@style/text_0e1214_17"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_level_height"
            android:text="购买注册积分" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_0e1214_15"
                android:layout_width="0dp"
                android:layout_height="@dimen/height"
                android:layout_weight="1"
                android:text="收款账号" />

            <TextView
                android:id="@+id/tv_gathering_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:layout_weight="3"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:digits="@string/input_impose_num"
                android:maxLines="1"
                android:maxLength="20"
                android:hint="银行卡"
                android:text="5116524662555456545"
                android:textColor="@drawable/selector_edit_text_color"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_image_url"
                style="@style/text_0e1214_15"
                android:layout_width="0dp"
                android:layout_height="@dimen/height"
                android:layout_weight="3"
                android:hint="Enter URL here to upload"
                android:background="@drawable/shape_up_down_textview"/>

            <Button
                android:id="@+id/btn_upload_image"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_button_bg"
                android:layout_marginLeft="18dp"
                android:text="上传"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_0e1214_15"
                android:layout_width="0dp"
                android:layout_height="@dimen/height"
                android:layout_weight="1"
                android:text="注册积分" />

            <cn.cnlinfo.ccf.view.CleanEditText
                android:id="@+id/et_transfer_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:layout_weight="3"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:digits="@string/input_impose_num"
                android:maxLines="1"
                android:maxLength="6"
                android:hint="数量"
                android:textColor="@drawable/selector_edit_text_color"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_0e1214_15"
                android:layout_width="0dp"
                android:layout_height="@dimen/height"
                android:layout_weight="1"
                android:text="安全密码" />

            <cn.cnlinfo.ccf.view.CleanEditText
                android:id="@+id/et_safe_pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:layout_weight="3"
                android:gravity="center"
                android:inputType="textPassword"
                android:digits="@string/input_impose_num_lower_case"
                android:maxLines="1"
                android:maxLength="11"
                android:hint="密码"
                android:textColor="@drawable/selector_edit_text_color"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_purchase_re_points"
            android:layout_width="69dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            style="@style/text_0e1214_15"
            android:background="@drawable/selector_button_bg"
            android:layout_marginTop="18dp"
            android:text="购买"/>
    </LinearLayout>

</LinearLayout>
