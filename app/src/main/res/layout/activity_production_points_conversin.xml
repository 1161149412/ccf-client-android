<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/icon_background">
    <include layout="@layout/item_title_no_right"/>
    <include layout="@layout/item_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="18dp"
        android:background="@drawable/icon_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_level_height"
                android:text="兑换中心"
                style="@style/text_0e1214_17" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="9dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height"
                    android:layout_weight="3"
                    android:text="产品积分兑换"
                    style="@style/text_0e1214_15"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginRight="9dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height"
                    android:layout_weight="3"
                    android:text="产品积分数量"
                    style="@style/text_0e1214_15"/>
                <cn.cnlinfo.ccf.view.CleanEditText
                    android:id="@+id/edit_ccvp_number"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:layout_weight="7"
                    style="@style/text_0e1214_15"
                    android:background="@drawable/edit_text_style"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginRight="9dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height"
                    android:layout_weight="3"
                    android:text="兑换比例"
                    style="@style/text_0e1214_15"/>
                <cn.cnlinfo.ccf.view.CleanEditText
                    android:id="@+id/edit_exchange_ratio"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:layout_weight="7"
                    style="@style/text_0e1214_15"
                    android:background="@drawable/edit_text_style"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginRight="9dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height"
                    android:layout_weight="3"
                    android:text="兑换数量"
                    style="@style/text_0e1214_15" />
                <cn.cnlinfo.ccf.view.CleanEditText
                    android:id="@+id/edit_exchange_number"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="7"
                    android:gravity="center"
                    style="@style/text_0e1214_15"
                    android:background="@drawable/edit_text_style"
                    android:inputType="textPassword" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/but_confirm"
                    android:layout_width="69dp"
                    android:layout_height="32dp"
                    android:background="@drawable/selector_button_bg"
                    android:text="兑换"
                    style="@style/text_0e1214_15"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
